<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:ellipsize="end" android:minLines="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskDueDate"
            app:layout_constraintTop_toTopOf="@+id/taskDueDateLabel" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskPoints"
            app:layout_constraintStart_toEndOf="@+id/completionsGoalLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/completionsGoalLabel"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/taskCompletions"
            app:layout_constraintTop_toTopOf="@+id/completionsLabel"
            app:layout_constraintStart_toEndOf="@+id/completionsLabel" android:layout_marginStart="8dp"/>
    <Button
            android:text="+1 Completion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incrementTask"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/completionsGoalLabel"/>
    <Button
            android:text="-1 Completion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decrementTask"
            app:layout_constraintTop_toTopOf="@+id/incrementTask"
            app:layout_constraintStart_toEndOf="@+id/incrementTask" android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskId"
            android:visibility="invisible" tools:layout_editor_absoluteY="99dp" tools:layout_editor_absoluteX="206dp"/>
    <TextView
            android:text="Completions goal:"
            android:layout_width="81dp"
            android:layout_height="38dp"
            android:id="@+id/completionsGoalLabel" app:layout_constraintStart_toStartOf="@+id/taskName"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/taskName"/>
    <Button
            android:text="Deactivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unsubscribeTask"
            app:layout_constraintTop_toTopOf="@+id/incrementTask"
            app:layout_constraintStart_toEndOf="@+id/decrementTask"
            app:layout_constraintEnd_toEndOf="parent" android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    <TextView
            android:text="Due date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskDueDateLabel"
            app:layout_constraintTop_toTopOf="@+id/taskName"
            app:layout_constraintEnd_toStartOf="@+id/taskDueDate" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Completions:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/completionsLabel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/taskDueDateLabel"
            app:layout_constraintStart_toStartOf="@+id/taskDueDateLabel"/>
    <TextView
            android:text="(Recurring task)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recurringLabel" app:layout_constraintStart_toEndOf="@+id/taskName"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/taskName" android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
