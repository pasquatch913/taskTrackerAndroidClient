<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/widgetTaskName"
            android:paddingStart="16dp"
            android:ellipsize="end" android:maxLines="3"
            android:layout_alignParentStart="true"
            android:textColor="#d3fcd5"/>
    <TextView
            android:text="TextView"
        android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:id="@+id/widgetTaskCompletions"
        android:textAlignment="center"
            android:textColor="#d3fcd5"/>
    <TextView
        android:text="TextView"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:id="@+id/widgetTaskCompletionsGoal"
        android:textAlignment="center"
        android:textColor="#d3fcd5"/>
    <TextView
        android:text="TextView"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:id="@+id/widgetTaskDueDate"
        android:textAlignment="center"
        android:textColor="#d3fcd5"/>

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:text="+1"
        android:textAlignment="center"
        android:layout_marginStart="32dp"
        android:id="@+id/widgetIncrementTask"
        android:background="#98a6d4"
        android:textColor="#d3fcd5"/>
</LinearLayout>