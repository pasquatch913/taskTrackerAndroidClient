<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#564d80"
    android:orientation="vertical"
    android:id="@+id/widgetMain">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widgetTaskNameLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Task Name"
            android:clickable="false"
            android:textColor="#d3fcd5" />

        <TextView
            android:id="@+id/widgetTaskCompletionsLabel"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:text="Comps"
            android:clickable="false"
            android:textColor="#d3fcd5" />

        <TextView
            android:id="@+id/widgetTaskCompletionsGoalLabel"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:text="Goal"
            android:clickable="false"
            android:textColor="#d3fcd5" />

        <TextView
            android:id="@+id/widgetTaskDueDateLabel"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:text="Due"
            android:clickable="false"
            android:textColor="#d3fcd5" />

        <TextView
            android:id="@+id/widgetIncrementTaskLabel"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:text="+1 Comps"
            android:clickable="false"
            android:textColor="#d3fcd5" />
    </LinearLayout>

    <ListView
        android:id="@+id/widgetCollectionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#98a6d4"
        android:dividerHeight="4dp"
        tools:listitem="@layout/widget_row"/>
</LinearLayout>

