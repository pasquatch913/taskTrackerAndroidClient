<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/listRowMain">

    <TextView
        android:id="@+id/widgetTaskName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingStart="16dp"
        android:text="TextView"
        android:textColor="#d3fcd5" />

    <TextView
        android:id="@+id/widgetTaskCompletions"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:clickable="false"
        android:textColor="#d3fcd5" />

    <TextView
        android:id="@+id/widgetTaskCompletionsGoal"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:clickable="false"
        android:textColor="#d3fcd5" />

    <TextView
        android:id="@+id/widgetTaskDueDate"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:clickable="false"
        android:textColor="#d3fcd5" />

    <Button
        android:id="@+id/widgetIncrementTask"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="#98a6d4"
        android:text="+1"
        android:textAlignment="center"
        android:textColor="#d3fcd5" />
</LinearLayout>